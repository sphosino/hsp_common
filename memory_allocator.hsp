	mem_size(oldid) = offset(next_mem_id(oldid)) - offset(oldid) //å³å´ã®ãƒ–ãƒ­ãƒE‚¯ã¾ã§ã®ã‚µã‚¤ã‚ºã‚’ã‚»ãƒEƒˆ

	//ç§»å‹•å¯èƒ½ãƒ–ãƒ­ãƒE‚¯ã‚’é¸æŠE
	newid = get_free_block(newsize)
	
	if newid = -1{
		//æ–°ãŸãªãƒ–ãƒ­ãƒE‚¯ã‚’ç¢ºä¿E
		newid = get_new_block(newsize)
		if newid == -1{
