					remove_free_block nid
				}else{
					//å³ã‚ªãƒ•ã‚»ãƒEƒˆç§»å‹E
					offset(nid) = originaloffset + newsize
					//å³ã®ã‚µã‚¤ã‚ºå¤‰æ›´
					resize_free_block nid, offset(next_mem_id(nid)) - offset(nid)
