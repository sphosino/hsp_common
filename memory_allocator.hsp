#deffunc debug_check_free_list_integrity

	//ç•ªå…µå˜å“æ¤œæŸ»Eˆå›ºå®šãEæƒE ±ãŒã„ã˜ã‚‰ã‚Œã¦ãEªãE‹EŸï¼E
	repeat CLASS_NUM
		if BLOCK_STATE(sentinel(cnt)) != STATE_SENTINEL: logmes "ç•ªå…µãŒå£Šã‚Œã¦ã¾ãE: stop
		if back_mem_id(sentinel(cnt)) != -1: logmes "ç•ªå…µãŒå£Šã‚Œã¦ãE¾ãE: stop
		if next_mem_id(sentinel(cnt)) != -1: logmes "ç•ªå…µãŒå£Šã‚Œã¦ãE¾ãE: stop
		if offset(sentinel(cnt)) != OFFSET_SENTINEL: logmes "ç•ªå…µãŒå£Šã‚Œã¦ãE¾ãE: stop
		if mem_size(sentinel(cnt)) != MEM_SENTINEL_SIZE: logmes "ç•ªå…µãŒå£Šã‚Œã¦ãE¾ãE: stop
	loop

	dim id_check, get_max_id(mem_id_manager) + 1 //”­s‚µ‚½ID‚ÌÅ‘å’l•ªŠm•Û


	sentinel_count = 0
	start_point = sentinel(0)
	while start_point >= 0

		id_check(start_point)++
		if id_check(start_point) >= 2{
			logmes "é‡è¤E™»éŒ²ã‚’ç™ºè¦‹ã—ã¾ã—ãŸ"
			stop
		}

		if next_free_list(start_point) >= 0 {
			if back_free_list(next_free_list(start_point)) != start_point {
				logmes "nextâ†’back ãŒä¸€è‡´ã—ã¾ã›ã‚“ at ID=" + start_point
				stop
			}
		}
		if back_free_list(start_point) >= 0 {
			if next_free_list(back_free_list(start_point)) != start_point {
				logmes "backâ†’next ãŒä¸€è‡´ã—ã¾ã›ã‚“ at ID=" + start_point
				stop
			}
		}

		switch block_state(start_point)

		case STATE_FREE
			assert next_mem_id(start_point) >= 0
			assert block_state(next_mem_id(start_point)) == STATE_USED
		swbreak
		case STATE_SENTINEL
			sentinel_count++
		swbreak
		case STATE_USED
			logmes "ä½¿ç”¨ä¸­ã®ãƒ–ãƒ­ãƒE‚¯ãŒãƒ•ãƒªãƒ¼ãƒªã‚¹ãƒˆã«å…¥ã£ã¦ãE¾ã™\n ãƒ–ãƒ­ãƒE‚¯ç•ªå·â†E + start_point
			stop
		swbreak
		default
			logmes "ä¸æEãªãƒ–ãƒ­ãƒE‚¯ãŒãƒ•ãƒªãƒ¼ãƒªã‚¹ãƒˆã«å…¥ã£ã¦ãE¾ã™\n ãƒ–ãƒ­ãƒE‚¯ç•ªå·â†E + start_point + "\n ãƒ–ãƒ­ãƒE‚¯ã‚¿ã‚¤ãƒ—âE" + block_stat(start_point)
			stop
		swbreak
		swend
			
		start_point = next_free_list(start_point)
	wend

	if sentinel_count != CLASS_NUM{
		logmes "ãƒ•ãƒªãƒ¼ãƒªã‚¹ãƒˆåEã®ç•ªå…µã®æ•°ãŒç•°å¸¸ã§ã™\n expected = " + CLASS_NUM + "\n actual = " + sentinel_count
		stop
	}

	return
	
#deffunc remove_from_free_list int id, local class_id

	//ãƒ•ãƒªãƒ¼ãƒªã‚¹ãƒˆã‹ã‚‰å‰Šé™¤ã™ã‚‹ã€ãã‚Œã ã‘ãªã®ã§ã€åEä½“ãEå‰å¾ŒãEçµåˆã¯å‘¼ã³å‡ºã—åEã§è¡Œã†ã“ã¨ã€E
	if block_state(id) != STATE_FREE {
		if block_state(id) == STATE_SENTINEL {
			logmes "ç•ªå…µã‚’å‰Šé™¤ã—ã‚ˆãE¨ã—ã¾ã—ãŸEE¼E¼E
		} else {
			logmes "ä½¿ç”¨ä¸­ãƒ–ãƒ­ãƒE‚¯ã‚’å‰Šé™¤ã—ã‚ˆãE¨ã—ã¾ã—ãŸ"
		}
		stop
	}

	link_free_list back_free_list(id), next_free_list(id)
	block_state(id) = STATE_USED
	return

	
#deffunc resize_free_block int id, int newsize

	//æŒE®šã•ã‚ŒãŸãƒ•ãƒªãƒ¼ãƒ–ãƒ­ãƒE‚¯ã®ã‚µã‚¤ã‚ºã‚’å¤‰æ›´ã™ã‚‹

	if block_state(id) != STATE_FREE{
		logmes "ãƒ•ãƒªãƒ¼ãƒ–ãƒ­ãƒE‚¯ã§ãªãEƒ–ãƒ­ãƒE‚¯ã§ãE!ã€resize_free_blockã€E
		return
	}
	
	_newclass = get_class_index(newsize)

	if get_class_index_by_id(id) == _newclass {
		//ã‚¯ãƒ©ã‚¹å¤‰å‹•ãªãE
		mem_size(id) = newsize
		return
	}
	
	//å‰Šé™¤ã—ã¦
	remove_from_free_list id

	//æ–°ãŸãªã‚µã‚¤ã‚ºã«æ›´æ–°ã—ã¦å†ç™»éŒ²
	mem_size(id) = newsize
	add_to_free_list id
	
	return
	
#deffunc add_to_free_list int id, local _class_

	_class_ = get_class_index(mem_size(id))

	class_top = sentinel( get_class_index(mem_size(id)) )

	//idã‚’å‰²ã‚Šè¾¼ã¾ã›ã‚‹
	link_free_list id, next_free_list(class_top)
	link_free_list class_top, id

	block_state(id) = STATE_FREE

	;debug_check_free_list_integrity

	return
	
#defcfunc get_free_block int size

	//æ¢ã—ã¦è¦‹ã¤ã‹ã£ãŸã‚‰å–ã‚Šå‡ºãE
	//æŒE®šã‚µã‚¤ã‚ºã®ã‚¯ãƒ©ã‚¹ä»¥ä¸ŠãEç©ºããƒ–ãƒ­ãƒE‚¯ã‚’æ¢ã™ã‚ˆ
	
	start_node = next_free_list(sentinel(get_class_index(size)))
	
	//æ¤œç´¢é–‹å§‹ã€å„ã‚¯ãƒ©ã‚¹ã®ç•ªå…µã®ã‚µã‚¤ã‚ºã¯ãƒã‚¤ãƒŠã‚¹ãªã®ã§ãƒªã‚¹ãƒˆãEæœ€å¾Œã¾ã§ãE‘ã‚‹ã€E

	while start_node >= 0 
		if mem_size(start_node) >= size{

			link_free_list back_free_list(start_node), next_free_list(start_node)

			block_state(start_node) = STATE_USED
			
			return start_node
		}
		start_node = next_free_list(start_node) 
	wend

	return -1
	
#deffunc shrink_block int target_id, int size

	//æœ‰åŠ¹ãªãƒ–ãƒ­ãƒE‚¯ã‚’æŒ‡å®šã‚µã‚¤ã‚ºã«ç¸®å°ã™ã‚Eå˜ç´”ç¸®å°ãªã®ã§å†E®¹ãŒå‰Šã‚‰ã‚Œã‚‹ã“ã¨ã‚‚ã‚ã‚E

	if block_state(target_id) != STATE_USED: return 1 
	if size <= 0: return 2
	if size > mem_size(target_id): return 3

	if last_block_id != target_id{

		next_block_id = next_mem_id(target_id)
	
		if block_state(next_block_id) == STATE_FREE{
			
			assert next_mem_id(next_block_id) >= 0

			//æ¬¡ã®ãƒ–ãƒ­ãƒE‚¯ãŒãƒ•ãƒªãƒ¼ãªã‚‰ã€æ¬¡ã®ãƒ–ãƒ­ãƒE‚¯ã®ã‚ªãƒ•ã‚»ãƒEƒˆã¨ã‚µã‚¤ã‚ºã‚’å¤‰æ›´ã€E
			offset(next_block_id) = offset(target_id) + size
			resize_free_block next_block_id, offset(next_mem_id(next_block_id)) - offset(next_block_id)
			
		}else: if offset(next_block_id) - offset(target_id) - size > FREELIST_THRESHOLD{
	
			//æ–°ãŸãªç©ºãç©ºé–“ã‚’ä½œæE
			new_free_id = get_new_id(mem_id_manager)
	
			link_blocks new_free_id, next_block_id
			link_blocks target_id, new_free_id
	
			offset(new_free_id) = offset(target_id) + size
			mem_size(new_free_id) = mem_size(target_id) - size
	
			//ãƒ•ãƒªãƒ¼ãƒªã‚¹ãƒˆã«ç™»éŒ²
			add_to_free_list new_free_id
			
		}
	}
	
	mem_size(target_id) = size
	
	return 0
	
#defcfunc get_new_block int size
	if size <= 0{
		logmes "ã‚µã‚¤ã‚ºEä»¥ä¸‹ã§ã¯ç¢ºä¿ã§ãã¾ã›ã‚“! ã€Eget_new_block() ã€E
		
		return -1
	}
	
	newid = get_free_block(size)
	
	if newid >= 0{
		shrink_block newid, size //å¿E¦ãªåˆE ã‘ã«ã‚»ãƒEƒˆ
		memset memory_pool,0, mem_size(newid), offset(newid) //get_new_blockãªã®ã§ãŠæƒé™¤
		return newid
	}
	//ä»¥ä¸‹æ–°è¦ç™ºè¡E

	//æ–°ãŸã«IDã‚’ç¢ºä¿ã€‚ä¸€ç•ªå³ã®ãƒ–ãƒ­ãƒE‚¯ä½ç½®ã¨ããEã‚µã‚¤ã‚ºã®å…ˆã«æ–°ã—ã„ãƒ–ãƒ­ãƒE‚¯ã‚’å‰²ã‚Šå½“ã¦ã‚E
	newid = get_new_id(mem_id_manager)
	
	mem_size(newid) = size

	if last_block_id >= 0{
		offset(newid) = offset(last_block_id) + mem_size(last_block_id)
		next_mem_id(last_block_id) = newid
	}else{
		offset(newid) = 0
	}

	if offset(newid) + size > MAX_EXPAND_LIMIT{

		//ãƒ­ãƒ¼ãƒ«ãƒãƒƒã‚¯
		if last_block_id >= 0{
			next_mem_id(last_block_id) = -1
		}
		release_id mem_id_manager, newid
		
		logmes "ãƒ¡ãƒ¢ãƒªãŒã¨ã‚Œãªã‹ã£ãŸã‚ˆãƒ»ãƒ»ãƒ»ã€get_new_block()ã€E
		stop
		return -1
	}
	
	back_mem_id(newid) = last_block_id
	next_mem_id(newid) = -1
	block_state(newid) = STATE_USED

	last_block_id = newid

	memexpand memory_pool, offset(newid) + size
	memset memory_pool,0, mem_size(newid), offset(newid)
	
	return newid


#deffunc free_block int id

	//ä½¿ç”¨ä¸­ã®ãƒ–ãƒ­ãƒE‚¯ã‚’è§£æ”¾ã™ã‚‹ã€‚å·¦å³ã®é ˜åŸŸã‚’å¸åã—ã¦ã€ãƒ•ãƒªãƒ¼ãƒªã‚¹ãƒˆã«è¿”ã™ã€E

	if is_id_alive(mem_id_manager, id) == 0: return 0
	if block_state(id) != STATE_USED: return 0//ä½¿ç”¨ä¸­ã§ã¯ãªãEƒ–ãƒ­ãƒE‚¯
	
	prev_id = back_mem_id(id) //å‰ãEãƒ–ãƒ­ãƒE‚¯id
	next_id = next_mem_id(id) //æ¬¡ã®ãƒ–ãƒ­ãƒE‚¯id
	
	//ãƒ•ãƒªãƒ¼ãƒªã‚¹ãƒˆã«last_block_idã‚’ç™»éŒ²ã—ãªãE»•æ§˜ã‚’ä¿è¨¼ã™ã‚‹ãŸã‚ã®ãƒ­ã‚¸ãƒE‚¯ã€E
	if id == last_block_id{
		//last_block_idã‚’è§£æ”¾ã™ã‚‹å ´åE
		if prev_id >= 0{
			if block_state(prev_id) != STATE_USED{
				//å·¦ã‚‚ãƒ•ãƒªãƒ¼
				remove_from_free_list prev_id
				if back_mem_id(prev_id) >= 0{
					next_mem_id(back_mem_id(prev_id)) = -1
				}
				last_block_id = back_mem_id(prev_id)
				release_id mem_id_manager, prev_id
			}else{
				//å·¦ã¯ä½¿ç”¨ä¸­
				last_block_id = prev_id
				next_mem_id(prev_id) = -1
			}
		}else{
			//è‡ªåˆE ã‘ãEæ™‚ãEå‡¦çE
			last_block_id = -1
		}
		//å…±é€šåEçE
		release_id mem_id_manager, id
		return 1
	}

	assert next_id >= 0 

	pattern_flag = 0

	if prev_id >= 0 {
		if block_state(prev_id) == STATE_FREE{
			pattern_flag |= 1 ;å·¦å´ãŒãƒ•ãƒªãƒ¼
		}
	}else{
		//ã€€å·¦ã«ãƒ–ãƒ­ãƒE‚¯ãŒãªãã¦ã‚‚å°æ–­ç‰EŒ–ã—ã¦ãE‚‹å¯èƒ½æ€§ãŒã‚ã‚‹ã€‚ã€€ãƒ–ãƒ­ãƒE‚¯ãŒå·¦ã«ãªãEEã§ã‚ã‚Œã°å·¦ç«¯ã¾ã§ã‚’é ˜åŸŸã¨ã™ã‚Œã°ã‚ˆã„ã€E
		//Eˆå³ç«¯ãŒå¤‰ã‚ã‚‰ãªãE‚ˆãE«éš™é–“ã‚’å¸åï¼E
		mem_size(id) += offset(id)
		offset(id) = 0
	}

	if block_state(next_id) == STATE_FREE{
		pattern_flag |= 2 ;å³å´ãŒãƒ•ãƒªãƒ¼
	}
		
	switch pattern_flag
	case 0 //ã©ã¡ã‚‰ã«ã‚‚çµ±åˆãªãE
		left = offset(id)
		right = offset(next_id)
		
		if prev_id >= 0: left = offset(prev_id) + mem_size(prev_id)
		
		offset(id) = left
		mem_size(id) = right - left
		
		if mem_size(id) > FREELIST_THRESHOLD{
			//ãƒ•ãƒªãƒ¼ãƒªã‚¹ãƒˆã«ç™»éŒ²
			add_to_free_list id
			
		}else{
			//å°æ–­ç‰Eªã®ã§ç„¡è¦–ã—ã€å‰å¾Œã‚’é€£çµã™ã‚E
			link_blocks prev_id, next_id
			release_id mem_id_manager, id //idè¿”å´
		}
	swbreak
				
	case 1 //å·¦ã«ã®ã¿çµ±åE
		left = offset(prev_id)
		right = offset(next_id)
		//é€£çµæ›´æ–°
		resize_free_block prev_id, right - left
		
		link_blocks prev_id, next_id

		release_id mem_id_manager, id //idã¯æ¶ˆå¤±
	swbreak

	case 2 //å³ã«ã®ã¿çµ±åE
		assert next_mem_id(next_id) >= 0 //ãƒ•ãƒªãƒ¼ãƒªã‚¹ãƒˆã«ç™»éŒ²ã•ã‚Œã¦ãE‚‹ã‹ã‚‰ã€ã•ã‚‰ã«å³ãŒã‚ã‚‹ã€E
		left = offset(id)
		right = offset(next_mem_id(next_id))
		if prev_id >= 0{
			left = offset(prev_id) + mem_size(prev_id)
		}
		
		resize_free_block next_id, right - left

		offset(next_id) = left
		//é€£çµæ›´æ–°
		link_blocks prev_id, next_id
		

		release_id mem_id_manager, id //idã¯æ¶ˆå¤±
	swbreak
	
	case 3 //å·¦å³ã«çµ±åE-> prev_idã«çµ±ä¸€ã™ã‚‹
		assert next_mem_id(next_id) >= 0
		left = offset(prev_id)
		right = offset(next_mem_id(next_id))

		resize_free_block prev_id, right - left

		remove_from_free_list next_id //nextã¯ãƒ•ãƒªãƒ¼ãƒªã‚¹ãƒˆã«å­˜åœ¨ã™ã‚‹ã¯ãšãªã®ã§å‰Šé™¤

		//é€£çµæ›´æ–°
		link_blocks prev_id, next_mem_id(next_id)

		//æ¶ˆå¤±idã‚’è¿”å´
		release_id mem_id_manager, id
		release_id mem_id_manager, next_id
		swbreak
	swend

	#ifdef DEBUG_ALLOCATOR
	debug_check_link_integrity "free_block pattern_flag -> " + pattern_flag
	debug_check_free_list_integrity
	debug_check_memory_pool_integrity
	#endif
	
	return 1
	
#deffunc debug_check_link_integrity str lab

	list_count = get_block_count()

	if list_count == 0 {
		return 0
	}

	//é–‹å§‹ç‚¹æœç´¢

	count = 0; ãã‚‚ãã‚‚ã®ã‚«ã‚¦ãƒ³ãƒˆãƒã‚§ãƒE‚¯
	start_point = -1
	foreach_id mem_id_manager, vid
		if block_state(vid) == STATE_SENTINEL: continue //ç•ªå…µã‚¹ã‚­ãƒEE
		if back_mem_id(vid) == -1{
			if start_point != -1 {
				logmes "[ãƒªãƒ³ã‚¯ãƒã‚§ãƒE‚¯å¤±æ•—] é–‹å§‹ç‚¹ãŒè¤E•°è¦‹ã¤ã‹ã£ãŸï¼E + lab
				return 1
			}
			start_point = vid
		}
		count++
	foreach_end

	if count != list_count{
		logmes "ã‚«ã‚¦ãƒ³ãƒˆãƒã‚°"
		stop
	}

	if start_point == -1 {
		logmes "[ãƒªãƒ³ã‚¯ãƒã‚§ãƒE‚¯å¤±æ•—] é–‹å§‹ç‚¹ãŒè¦‹ã¤ã‹ã‚‰ãªãE¼E + lab
		return 1
	}

	//é–‹å§‹ç‚¹ã‹ã‚‰æœ€å¾Œã¾ã§åˆ°é”ã§ãã‚‹ã‹ã€ãƒãƒE‚¯ãƒªãƒ³ã‚¯ã¨å¾ªç’°ã‚‚å«ã‚ã¦ãƒã‚§ãƒE‚¯
	count = 0
	__prev_id = -1
	
	while start_point != -1
		if back_mem_id(start_point) != __prev_id {
			logmes "[ãƒªãƒ³ã‚¯ãƒã‚§ãƒE‚¯å¤±æ•—] " + strf("%d > (%d=%d) < %d", __prev_id, start_point, back_mem_id(start_point), start_point) + "æ¬¡ã®å‰ãŒãƒªãƒ³ã‚¯ã—ã¦ãE¾ã›ã‚“\n" + lab
			return 1
		}
		if count > list_count{
			logmes "[ãƒªãƒ³ã‚¯ãƒã‚§ãƒE‚¯å¤±æ•—] å¾ªç’°æ¤œåE: " + lab
			return 1
		}
		__prev_id = start_point
		start_point = next_mem_id(start_point)
		count++
	wend
	
	if count != list_count{
